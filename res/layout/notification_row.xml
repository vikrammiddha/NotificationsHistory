<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#FFFFFF"
    android:id="@+id/llId" >

    <ImageView
        android:id="@+id/appImageViewId"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#FFFFFF"
        android:src="@drawable/ic_launcher"
        android:layout_weight="80"
        android:layout_gravity="left"
         />

    <LinearLayout android:layout_width="fill_parent"
    				android:layout_height="wrap_content"
    				android:orientation="vertical"
    				android:layout_weight="50">
	    <TextView
	        android:id="@+id/notificationRowTextViewId"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="#FFFFFF"
	        android:text="App Notifications Pie Chart"
	        android:gravity="left"
	        android:textAppearance="?android:attr/textAppearanceSmall"
	        android:textColor="#0F1A5E"
	        
	         />
	    
	    <TextView
	        android:id="@+id/lastActivityDateId"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="#FFFFFF"
	        android:text="Last: 01/03/2013 00:00:00"
	        android:gravity="left"
	        android:textAppearance="?android:attr/textAppearanceSmall"
	        android:textColor="#0F1A5E"
	        android:layout_weight="50"/>
	         
    </LinearLayout>
     <TextView
        android:id="@+id/notificationCountId"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFF"
        android:text="Row"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#0F1A5E" 
        android:layout_weight="85"
        android:paddingRight="10dp"
        />
     
     <ImageView
        android:id="@+id/trashImageViewId"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:background="#FFFFFF"        
        android:layout_weight="85"
        android:layout_gravity="center"
        android:src="@drawable/trash"
        android:onClick="deleteAppNotifications"
        android:clickable="true"
         />
     

</LinearLayout>
