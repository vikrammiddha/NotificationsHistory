<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="bottom" 
    android:background="#FFFFFF">

   <LinearLayout
       android:id="@+id/button_bar"
       style="@android:style/ButtonBar"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true" >

       <Button
           android:id="@+id/no_report_button"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_gravity="left"
           android:layout_weight="1"
           android:onClick="onNoReportButtonClick"
           android:text="@string/no_report" />

       <Button
           android:id="@+id/report_button"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_gravity="right"
           android:layout_weight="1"
           android:onClick="onReportButtonClick"
           android:text="@string/report" />
   </LinearLayout>

    <TextView 
        android:id="@+id/report_text"
        android:text="@string/no_ad_apps"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/button_bar"
        android:textColor="#000000"
        />
    
    <com.google.ads.AdView android:id="@+id/adView2"
                         android:layout_width="fill_parent"
                         android:layout_height="fill_parent"
                         ads:adUnitId="a151f8df85e7f3a"
                         ads:adSize="BANNER"
                         android:layout_alignParentTop="true"                    
                         ads:loadAdOnCreate="true"
                         />
</RelativeLayout>
